<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/main_file_ll"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="4dp"




        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@android:color/transparent"

        >
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/case1"
            android:layout_width="120dp"
            android:layout_height="195dp"
            android:layout_gravity="center"
            android:background="@drawable/file_shape_1" >
            <ImageView

                android:id="@+id/badge"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shield"/>
"
        </LinearLayout>

    <LinearLayout

        android:id="@+id/case2"
        android:layout_width="5dp"
        android:layout_height="195dp"
        android:layout_gravity="top"
        android:background="@color/murderous_red"/>

        <LinearLayout
            android:elevation="1dp"
            android:id="@+id/case3"
            android:layout_width="12dp"
            android:layout_height="195dp"
            android:layout_gravity="center"
            android:background="@drawable/file_shape" />
    </LinearLayout>


    <TextView
        android:id="@+id/case_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"

        android:textAlignment="viewStart"
        android:text="The case of the missing motivation"/>




</LinearLayout>